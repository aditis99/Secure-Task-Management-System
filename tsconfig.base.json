{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@secure-task-mgmt/data": ["data/src/index.ts"],
      "@secure-task-mgmt/data/backend": ["data/src/lib/backend/index.ts"],
      "@secure-task-mgmt/auth": ["auth/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
